<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controladores SYSTEM "dtds/controladores.dtd">

<!-- 
Documentación sobre controladores: 
https://www.openxava.org/OpenXavaDoc/docs/controllers_es.html

Controladores por defecto, incluidos en OpenXava (puedes extender de ellos):
https://github.com/openxava/openxava/blob/master/openxava/src/main/resources/xava/default-controllers.xml
 
Ejemplos de controladores (de la aplicación de pruebas):
https://github.com/openxava/openxava/blob/master/openxavatest/src/main/resources/xava/controllers.xml
-->

<controladores>
    
    <!-- Variable de entorno: 
    <var-entorno nombre="AgenciaAduanera_ANYO_DEFECTO" valor="2015"/>
    -->
    
    <!-- Objeto de sesión:
    <Objeto nombre="AgenciaAduanera_anyoActivo" clase="java.lang.Integer" valor="2015" 
            ambito="global"/>
    -->
    
    <!-- Controlador:
    <controlador nombre="Profesor">
        <hereda-de controlador="Typical"/>
        <accion nombre="new" icono="library-plus" atajo-de-teclado="Control N" 
                clase="acciones.CrearProfesor"/>        
    </controlador>
    -->

    <controlador nombre="SignIn">
        <accion nombre="init" al-iniciar="true" oculta="true"
                clase="com.openxava.naviox.actions.InitSignInAction"/>
        <accion nombre="signIn"
                clase="org.example.AgenciaAduanera.actions.SignInAction"/>
    </controlador>

    <controlador nombre="ExpedienteCustom">
        <accion nombre="cerrarExpediente"
                clase="org.example.AgenciaAduanera.actions.CerrarExpedienteAction"
                icono="close"
                modo = "detail"/>
    </controlador>

    <controlador nombre="DeclaracionCustom">
        <accion nombre="generarFactura"
                clase="org.example.AgenciaAduanera.actions.GenerarFacturaAction"
                icono="invoice"
                modo="detail"/>
    </controlador>



    <controlador nombre="TypicalConReporte">
    <hereda-de controlador="Typical"/>
        <accion nombre="printFacturas"
                icono="printer"
                modo="list"
                clase="org.example.AgenciaAduanera.actions.PrintFacturaReportAction"
        />

    </controlador>

    <controlador nombre="Reference">
        <hereda-de controlador="Reference"/>

        <accion nombre="search"
                clase="org.openxava.actions.ReferenceSearchAction"
                icono="magnify"
                imagen="search.gif"/>

        <accion nombre="createNew"
                clase="org.example.AgenciaAduanera.actions.NewCreateFromReference"
                icono="plus-box-multiple"
                imagen="create_new.gif"/>

        <accion nombre="modify"
                clase="org.example.AgenciaAduanera.actions.NewEditFromReference"
                icono="border-color"
                imagen="edit.gif"/>

        <!-- ? Esta era la acción que faltaba -->
        <accion nombre="clear"
                clase="org.openxava.actions.ClearReferenceAction"
                icono="eraser"
                imagen="clear.gif"/>
    </controlador>
</controladores>
